{
  "apps": [
    {
      "args": "start",
      "exec_mode": "cluster",
      "instances": "max",
      "name": "my-npm-stats",
      "script": "npm"
    }
  ],
  "deploy": {
    "production": {
      "host": [
        "dword-design.de"
      ],
      "path": "/var/www/my-npm-stats",
      "user": "root",
      "repo": "git@github.com:dword-design/my-npm-stats.git",
      "post-deploy": "source ~/.nvm/nvm.sh && yarn --frozen-lockfile && yarn prepublishOnly && pm2 startOrReload ecosystem.json",
      "ref": "origin/master"
    }
  }
}